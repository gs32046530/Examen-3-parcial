@page "/Usuarios"
<h3>Listas de Usuarios</h3>

@if (usuariosLista == null)
{
	<div class="spinner"></div>
}
else
{
	<table class="table">
		<thead>
			<tr>
				<th>Codigo</th>
				<th>Nombre</th>
				<th>Rol</th>
				<th>Esta Activo</th>
				<th></th>

			</tr>
		</thead>
		<tbody>
			@foreach (var user in usuariosLista)
			{
				<tr>
					<td>@user.Codigo</td>
					<td>@user.Nombre</td>
					<td>@user.Rol</td>
					<td>
						@if (@user.EstaActivo)
						{
							<span class="oi oi-circle-check" style="color:green;" ></span>
						}
						else
						{
							<span class="oi oi-circle-x" style="color:red;"> </span>
						}

					</td>
					 <td>
						<a class="btn btn-success" href="@($"/Usuarios{user.Codigo}")">Editar</a>
                    </td>
				</tr>
			}
		</tbody>
	</table>

}


